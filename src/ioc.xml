<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="myperson" class="com.linjie.bean.Person">
        <property name="lastname" value="zhangsan"></property>
        <property name="age" value="13"></property>
        <property name="email" value="zhangsan@163.com"></property>
        <property name="gender" value="man"></property>
    </bean>
    <bean id="myperson1" class="com.linjie.bean.Person">
        <!--  调用set方法进行赋值  -->
        <property name="lastname" value="lisi"></property>
        <property name="age" value="18"></property>
        <property name="email" value="lisi@163.com"></property>
        <property name="gender" value="man"></property>
    </bean>

    <bean id="myperson2" class="com.linjie.bean.Person">
    <!-- 调用有参构造器进行创建对象并赋值 -->
        <constructor-arg name="lastname" value="小明"></constructor-arg>
        <constructor-arg name="age" value="25"></constructor-arg>
        <constructor-arg name="email" value="xiaoming@163.com"></constructor-arg>
        <constructor-arg name="gender" value="男"></constructor-arg>
    </bean>
</beans>